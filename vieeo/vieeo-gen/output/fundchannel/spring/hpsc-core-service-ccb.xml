<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd"
    default-autowire="no">

    <context:annotation-config />
    <context:component-scan base-package="com.shengpay.hpsc.core.domainservice.ccb.processor" />
    <context:component-scan base-package="com.shengpay.hpsc.core.domainservice.ccb.service" />

    <!-- ccb银行配置 -->
    <!-- channelServiceFactory -->
    <bean id="ccbChannelServiceFactory" class="com.shengpay.fcf.core.domainservice.factory.impl.CodeMappingChannelServiceFactory" >
        <property name="channelServices">
            <map>
            	<!-- 鉴权 -->
                <entry key="CCB100091-AUTH" value-ref="ccbAuthChannelService" />
                <!-- 签到 -->
                <entry key="CCB100091-CI" value-ref="ccbCheckInChannelService" />
                <!-- 签退 -->
                <entry key="CCB100091-CO" value-ref="ccbCheckOutChannelService" />
                <!-- 扣款 -->
                <entry key="CCB100091-DB" value-ref="ccbDebitChannelService" />
                <!-- 扣款冲正 -->
                <entry key="CCB100091-DBR" value-ref="ccbReversalChannelService" />
                <!-- 退款 -->
                <entry key="CCB100091-SR" value-ref="ccbRefundChannelService" />
                <!-- 查询 -->
                <entry key="CCB100091-SQ" value-ref="ccbQueryChannelService" />
            </map>
        </property>
    </bean>

</beans>

